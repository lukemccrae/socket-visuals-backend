{
  "name": "corsa-backend",
  "version": "0.1.0",
  "bin": {
    "corsa-backend": "bin/corsa-backend.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "cdk": "cdk",
    "codegen": "graphql-codegen --config codegen.ts",
    "deploy": "yarn graphql-schema-linter && yarn codegen && sh ./build_lambdas.sh && yarn cdk deploy --profile default"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.0",
    "@graphql-codegen/typescript": "4.0.1",
    "@graphql-codegen/typescript-resolvers": "^4.0.1",
    "@types/geojson": "^7946.0.11",
    "@types/jest": "^29.5.4",
    "@types/node": "20.5.9",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "aws-cdk": "2.96.2",
    "eslint": "^8.0.1",
    "eslint-config-standard-with-typescript": "^39.1.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0 || ^16.0.0 ",
    "eslint-plugin-promise": "^6.0.0",
    "graphql-schema-linter": "^3.0.1",
    "lint-staged": "^14.0.1",
    "ts-node": "^10.9.1",
    "typescript": "*"
  },
  "dependencies": {
    "@aws-cdk/aws-appsync": "^1.204.0",
    "aws-cdk-lib": "2.96.2",
    "constructs": "^10.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "graphql": "^16.8.1",
    "prettier": "^3.0.3",
    "source-map-support": "^0.5.21"
  },
  "graphql-schema-linter": {
    "rules": [
      "enum-values-sorted-alphabetically"
    ],
    "schemaPaths": [
      "infra/graphql/schema.graphql"
    ],
    "rulesOptions": {
      "enum-values-sorted-alphabetically": {
        "sortOrder": "lexicographical"
      }
    }
  }
}
